# CDP Platform Configuration
# Copy this file to .env or set as environment variables

# Databricks Configuration
# If not set, will use ~/.databrickscfg automatically
# DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
# DATABRICKS_TOKEN=your-token-here

# Unity Catalog
DATABRICKS_CATALOG=cdp_platform
DATABRICKS_SCHEMA=core

# SQL Warehouse (optional - will auto-detect if not set)
# Get this from: Databricks SQL > SQL Warehouses > Copy Warehouse ID
SQL_WAREHOUSE_ID=03560442e95cb440

# Application
APP_NAME=Databricks CDP Platform
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=change-me-in-production
ALLOWED_ORIGINS=http://localhost:3000

# Agent Configuration
AGENT_MODEL=databricks-meta-llama-3-1-70b-instruct
AGENT_MAX_ITERATIONS=10
AGENT_TEMPERATURE=0.7

# MLflow
MLFLOW_EXPERIMENT_NAME=/cdp-platform/agent-decisions

# Email Provider (SendGrid)
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@cdp-platform.com

# SMS Provider (Twilio)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_FROM_NUMBER=+1234567890

# Redis (for feature caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
